// tsconfig.json
{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",                                /* Specify ECMAScript target version */
    "module": "commonjs",                              /* Specify module code generation */
    "rootDir": "./src",                                /* Specify the root directory of source files */
    "outDir": "./dist",                                /* Redirect output structure to this directory */
    "esModuleInterop": true,                           /* Enables support for default imports */
    "forceConsistentCasingInFileNames": true,          /* Ensure that casing is correct in imports */
    
    /* Strict Type-Checking Options */
    "strict": true,                                    /* Enable all strict type-checking options */
    "skipLibCheck": true                               /* Skip type checking of all declaration files */
  },
  "include": [
    "src/**/*" // Include all files inside the src directory
  ]
}